        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/f1Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:background="@drawable/primary_button_selector"
                android:textColor="@color/black"
                android:textSize="25sp"/>

            <ImageButton
                android:id="@+id/redButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/keyboard_red_key_selector"
                android:src="@mipmap/capsoff"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/greenButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/keyboard_green_key_selector"
                android:textColor="@color/white"
                android:textSize="25sp"/>

            <ImageButton
                android:id="@+id/previousButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/previous_button_selector"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/spaceButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/primary_button_selector"
                android:textColor="@color/black"
                android:textSize="25sp"/>

            <ImageButton
                android:id="@+id/nextButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/next_button_selector"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/yellowButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:background="@drawable/keyboard_yellow_key_selector"
