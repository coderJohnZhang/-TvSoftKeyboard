                android:layout_weight="1"
                android:background="@drawable/primary_button_selector"
                android:textColor="@color/black"
                android:textSize="25sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/primary_button_selector"
                android:textColor="@color/black"
                android:textSize="25sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/primary_button_selector"
